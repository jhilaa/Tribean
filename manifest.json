{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
	"activeTab",
    "http://*/",
    "https://*/",
    "cookies"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self';",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icone16.png",
    "48": "icone48.png",
    "128": "icone128.png"
  }
}
